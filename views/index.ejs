<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Hophead Stub</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poiret+One&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&family=Ubuntu:wght@400;500;700&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="styles/style.css" />
  </head>
  <body>
    <header class="top-header">
      <h1>hophead stub</h1>
    </header>
    <div class="container">
      <section class="month-section">
        <form action="/query-notion" method="post" class="month-form">
          <div class="month-row">
            <label for="month" class="month-label">Choose month: </label>
            <select
              name="monthSelected"
              id="monthSelected"
              class="month-options"
            >
              <% month.forEach((query, id, array) => { %>
              <option value="<%= query.name %>"><%= query.name %></option>
              <% }) %>
            </select>
            <button type="submit" class="btn btn-primary" id="get-data">
              Get Data
            </button>
          </div>
        </form>
      </section>
      <% if(dloadFlag) { %>
      <form action="/download-fee-details" method="post" class="download-fd">
        <div class="download-button">
          <button type="submit" class="btn btn-download-fd">
            Download Details
          </button>
        </div>
      </form>
      <% } %> <% if(feeDetailsGlobal) { %>
      <section class="fee-details">
        <div class="card-holder">
          <% feeDetailsGlobal.forEach(internDetail => { %>
          <div
            class="card"
            id="<%=internDetail.name%>--<%=internDetail.month%>"
          >
            <div class="card-header">
              <span>Name: </span>
              <span><%=internDetail.name%></span>
              <hr />
              <span>Details For:</span>
              <span><%=internDetail.month%></span>
            </div>
            <div class="card-body">
              <table>
                <thead>
                  <tr>
                    <th>Project Name</th>
                    <th>Fee (Rs.)</th>
                  </tr>
                </thead>
                <tbody>
                  <% for(let i = 1; i< internDetail.projectDetails.length; ++i)
                  { %>
                  <tr>
                    <td><%=internDetail.projectDetails[i].project%></td>
                    <td><%=internDetail.projectDetails[i].fee%></td>
                  </tr>
                  <%} %>
                </tbody>
              </table>
            </div>
            <div class="card-total">
              <span>Total:</span>
              <span>Rs. <%=internDetail.total%></span>
            </div>
          </div>

          <% }) %>
        </div>
      </section>
      <% } %> <% if(dloadFlag && feeDetailsGlobal.length > 5) { %>
      <form action="/download-fee-details" method="post" class="download-fd">
        <div class="download-button">
          <button type="submit" class="btn btn-download-fd">
            Download Details
          </button>
        </div>
      </form>
      <% } %>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/0.4.1/html2canvas.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/file-saver@2.0.2/dist/FileSaver.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/dom-to-image/2.6.0/dom-to-image.min.js"></script>
    <script src="index.js"></script>
  </body>
</html>
